<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"

    >


    <LinearLayout
        android:background="@drawable/table_design"
        android:layout_width="match_parent"

        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/adminTalepGoruntuleKullaniciAditxt"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Kullanici adi "
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="10dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#A9A9A9"></View>

        <TextView
            android:id="@+id/adminTalepGoruntuleTalepKonutxt"
            android:layout_marginTop="5dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="Talep konu "
            android:textAlignment="center"
            android:padding="10dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#A9A9A9"></View>







        <TextView
            android:id="@+id/adminTalepGoruntuleTalepBasliktxt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:text="Talep baslik "
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="10dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#A9A9A9"></View>


      <TextView
          android:id="@+id/adminMenuBtn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/ic_menu"
          android:textColor="@color/black"
          android:backgroundTint="@color/black"
          android:layout_gravity="center"
          android:textAlignment="center"
          android:layout_marginLeft="5dp"></TextView>

    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->


</LinearLayout>